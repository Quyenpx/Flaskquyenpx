# Dockerfile với Alpine Linux
FROM python:3.9-alpine

WORKDIR /app

# Copy requirements
COPY requirements_deploy.txt .

# Cài đặt dependencies
RUN pip install --no-cache-dir -r requirements_deploy.txt

# Copy source code
COPY . .

# Expose port
EXPOSE 5000

# Chạy ứng dụng
CMD ["python", "app_with_templates.py"]
